{
    "apps": [
        {
            "name": "sportsuz-bot",
            "script": "./dist/index.js",
            "instances": 1,
            "exec_mode": "fork",
            "env": {
                "NODE_ENV": "production",
                "PORT": 3000
            },
            "env_production": {
                "NODE_ENV": "production",
                "PORT": 3000
            },
            "log_file": "./logs/combined.log",
            "out_file": "./logs/out.log",
            "error_file": "./logs/error.log",
            "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
            "restart_delay": 1000,
            "max_restarts": 10,
            "min_uptime": "10s",
            "kill_timeout": 5000,
            "watch": false,
            "ignore_watch": [
                "node_modules",
                "logs",
                "*.log"
            ]
        }
    ]
}